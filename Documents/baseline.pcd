set FontSize "22"
set FontSizeCJK "22"
set Typeface "Minion-Regular"
set TypefaceCJK "AdobeFangsongStd-Regular"
set Ligature "1"

# This is the magic. 
set TextVerticalAlign "bottom-baseline:10"

# Slighty adjust the baseline of CJK text so that it appears have the same baseline with latin font.
set BaselineOffsetCJK 0.5

set TextAlign left
set Color 0x000000
text 0 0 100 200 "中英1jk hello, world. Test mixed multiline. 中英jyl"


